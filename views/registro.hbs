<div class="container-fluid bg-dark fill m-0">
    <div class="row justify-content-center align-items-center">
        <div class="col-7 bg-light mt-5">
            <form method="post" action="/registro">
                <div class="form-group mt-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" name="username" class="form-control" placeholder="Ingrese su nombre de usuario" id="username">
                </div>
                <div class="mb-1 mt-3">
                    <label for="pass" class="form-label">Password:</label>
                    <input type="password" class="form-control" name="pass" placeholder="Ingrese su contraseña" id="pass">
                </div>
                <div class="mb-1 mt-3">
                    <label for="passConfirmation" class="form-label">Confirme su password:</label>
                    <input type="password" class="form-control" name="passConfirmation" placeholder="Vuelva a ingresar su contraseña" id="passConfirmation">
                </div>
                <div class="mt-3 mb-1">
                    <label for="mail" class="form-label">Email:</label>
                    <input type="email" class="form-control" name="mail" placeholder="Ingrese su email" id="mail">
                </div>
                <div class="mb-3 mt-3 d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-block">Registrarse</button>
                </div>
                <div class="mb-2 mt-2">
                    <span class="text-danger">{{message}}</span>
                </div>
            </form>
        </div>
    </div>
</div>